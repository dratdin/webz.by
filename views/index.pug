    section.section#price
      h2.title.Fblack.align-center.container Цены на создание сайтов
      ul.price
        each product in products
          li.price__productCard.productCard
            .productCard__openInfo i
            img.productCard__img(src=product.img_src alt=product.title)
            h3.productCard__title= product.title
            .productCard__cost= product.cost
            .productCard__btn.openForm Заказать
            .productCard__info.modalBg
              .modalContent.Fwhite
                .modalContent__close
                dt.title.separator.separator_default.separator_white= product.title
                dd.text= product.info
    -
     var works = [
      {title: 'Flightcase', photo_src: 'data/portfolio/flightcase.jpg', long: false, category: 'visit-card'},
      {title: 'CREDO Engineers', photo_src: 'data/portfolio/credo.jpg', long: true, category: 'corporate'},
      {title: 'Kub-event', photo_src: 'data/portfolio/kub-event.jpg', long: true, category: 'visit-card'},
      {title: 'Metal-montag', photo_src: 'data/portfolio/mm.jpg', long: false, category: 'visit-card'},
      {title: 'Shkaf12', photo_src: 'data/portfolio/shkaf12.jpg', long: false, category: 'landing-page'}]
    section#portfolio
      .portfolio__picker.picker
        .container
          h2.picker__title.title.align-center Портфолио
          ul
            li.picker__category.picker__category_selected#album-all Все
            li.picker__category#album-landings Landing page
            li.picker__category#album-vitit-cards Сайт-визитка
            li.picker__category#album-corporate Корпоративный сайт
      .portfolio__mosaicAlbum.mosaicAlbum.clearfix
        each work in works
          .mosaicAlbum__Photo(class=work.long ? 'mosaicAlbum__Photo_long' : '' data-info=work.category)
            .mosaicAlbum__photoIn
              .mosaicAlbum__photoCont.coverable(style="background-image: url('" + work.photo_src + "')")

    .clearfix#discounts
      .section.SectionHalf.SectionHalf_G.col-xs-12.col-sm-12.col-md-6.col-lg-6
        section.sectionHalf
            .sectionHalf__content.clearfix
              h2.sectionHalf__title.title.separator Наша система<br /> скидок
              .sectionHalf__textGroup.textGroup
                h3.textGroup__title Скидка 10%
                p.text Поделитесь ссылкой на наш сайт и соберите 10 репостов (ретвитов) во Вконтакте, Facebook или Tweeter и получите скидку 10%
              .sectionHalf__textGroup.textGroup
                h3.textGroup__title Скидка 30%
                p.text Закажите 2 сайта или приведите клиента и получите скидку 30%
            -  var icons = ['vk', 'f', 't']
              .sectionHalf__socials
                each icon in icons
                  .sectionHalf__socialIcon.socialIcon(class=icon)= icon
      .section.SectionHalf.SectionHalf_P.hidden-xs.hidden-sm.col-md-6.col-lg-6
        section.sectionHalf
          .sectionHalf__content
            h2.sectionHalf__title.title.separator Оставьте заявку<br /> прямо сейчас
            p.text И мы свяжемся с вами, чтобы сэкономить ваше время
          .sectionHalf__btn.btn.openForm ОСТАВИТЬ ЗАЯВКУ

    section.section
      .container
        h2.title.Fblack.align-center 5 Шагов для идеального<br /> результата
        ol.steps
          li.Step
            .step
              .step__number 1
              .step__content
                h3.step__title.separator Планирование
                p.text Оговариваем возможности, прикидываем общую концепцию, расчитываем стоимость сайта
          li.Step
            .step
              .step__number 2
              .step__content
                h3.step__title.separator Проектирование
                p.text Исследование вашего рынка, разработка макета будущего сайта, демонстрация макета сайта и внесение поправок по вашему желанию сайта
          li.Step
            .step
              .step__number 3
              .step__content
                h3.step__title.separator Разработка
                p.text Верстка и программирование сайта
          li.Step
            .step
              .step__number 4
              .step__content
                h3.step__title.separator Сдача проекта
                p.text Тестирование сайта, демонстация проделанной работы, загрузка сайта на хостинг
          li.Step.step_warranty
            .step
              .step__number 5
              .step__content
                h3.step__title.separator Гарантия и поддержка
                p.text Мы обязуемся всегда быть рядом на случай, если что-то пойдет не так, исправим любые возникнувшие проблемы в кротчайшие сроки

