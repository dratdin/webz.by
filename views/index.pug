doctype html
html(lang="ru-Ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Создание сайтов Минск. Система скидок и поддержка!
    meta(name="description" content="Разработка сайтов любой сложности. Наши цены гораздо ниже рыночных, а система скидок позволяет сэкономить вам еще больше денег. Создание сайтов с нуля, под ключ и их последующие продвижение")

    link(rel="shortcut icon" href="public/img/five-icon.png" type="image/x-icon")
    link(rel="stylesheet" href="libs/bootstrap-grid-3.3.1.min.css")
    link(rel="stylesheet" href="public/css/app.css")
  body
    .Header.coverable
      .hidden-sm.hidden-md.hidden-lg.Menu-btn.clearfix
          .menu-btn
      .Header__container.container
        .Header__half
          .Header__intro
            .logo.separator WEBZ
            h1.pageTitle разработка и создание<br /> сайтов в Минске
            .hidden-sm.hidden-md.hidden-lg.MobileContacts
              .mobileContacts +375 (33) 333 24 47
              .mobileContacts webz.sites.by@gmail.com
            .Header__coverCheck.coverCheck
              .coverCheck__item Дешевле
              .coverCheck__item Качественнее
              .coverCheck__item Надежнее
        .Header__half
          nav.Header__Menu.Menu
            ul.menu
              li.menu__item
                a.menu__lnk(href="#price") ЦЕНЫ
              li.menu__item
                a.menu__lnk(href="#portfolio") ПОРТФОЛИО
              li.menu__item.menu__item_new
                a.menu__lnk(href="#discounts") СКИДКИ
              li.menu__item
                a.menu__lnk(href="#testimonials") ОТЗЫВЫ
          form.Header__form.form
            input.form__field(type="text" name="name" placeholder="ВАШЕ ИМЯ" required)
            input.form__field(type="text" name="phone" placeholder="ВАШ НОМЕР ТЕЛЕФОНА" required)
            input.form__field(type="text" name="email" placeholder="ВАШ E-MAIL" required)
            button.form__btn.btn.btn_wp(type="submit" name="mail-request") ОСТАВИТЬ ЗАЯВКУ
          .Header__contacts.contacts
            .contacts__group
              a.contacts__item(href="tel:+375333332447") +375 (33) 333 24 47
              a.contacts__item(href="tel:+375336756847") +375 (33) 675 68 47
            .contacts__group
              a.contacts__item(href="mailto:webz.sites.by@gmail.com") webz.sites.by@gmail.com
    -
     var bonuses = [
