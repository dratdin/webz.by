doctype html
html(lang="ru-Ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Создание сайтов Минск. Система скидок и поддержка!
    meta(name="description" content="Разработка сайтов любой сложности. Наши цены гораздо ниже рыночных, а система скидок позволяет сэкономить вам еще больше денег. Создание сайтов с нуля, под ключ и их последующие продвижение")

    link(rel="shortcut icon" href="public/img/five-icon.png" type="image/x-icon")
    link(rel="stylesheet" href="libs/bootstrap-grid-3.3.1.min.css")
    link(rel="stylesheet" href="public/css/app.css")
    link(href="https://fonts.googleapis.com/css?family=Oswald:300,500&amp;subset=cyrillic" rel="stylesheet")
  body
    .Header.coverable
      .hidden-sm.hidden-md.hidden-lg.MenuLine
        input(type="checkbox" id="hmt").hidden.htm
        label(for="hmt").btn-menu
          span.btn-menu__line
          span.btn-menu__line
          span.btn-menu__line
        nav.MobileMenu
          ul.menu.menu_mobile
            li.menu__item
              a.menu__lnk(href="#price") ЦЕНЫ
            li.menu__item
              a.menu__lnk(href="#portfolio") ПОРТФОЛИО
            li.menu__item
              a.menu__lnk.menu__lnk_new(href="#discounts") СКИДКИ
            li.menu__item
              a.menu__lnk(href="#testimonials") ОТЗЫВЫ
          .MobileContacts
            .mobileContacts +375 (33) 333 24 47
            .mobileContacts webz.sites.by@gmail.com
      .Header__container.container
        .Header__half
          .Header__intro
            .logo.separator WEBZ
            h1.pageTitle Создание сайтов в Минске
            .Header__coverCheck.coverCheck
              .coverCheck__item Дешевле
              .coverCheck__item Качественнее
              .coverCheck__item Надежнее
        .Header__half
          nav.Header__Menu.Menu
            ul.menu
              li.menu__item
                a.menu__lnk(href="#price") ЦЕНЫ
              li.menu__item
                a.menu__lnk(href="#portfolio") ПОРТФОЛИО
              li.menu__item
                a.menu__lnk.menu__lnk_new(href="#discounts") СКИДКИ
              li.menu__item
                a.menu__lnk(href="#testimonials") ОТЗЫВЫ
          form.Header__form.form
            input.form__field(type="text" name="name" placeholder="ВАШЕ ИМЯ" required)
            input.form__field(type="text" name="phone" placeholder="ВАШ НОМЕР ТЕЛЕФОНА" required)
            input.form__field(type="text" name="email" placeholder="ВАШ E-MAIL" required)
            button.form__btn.btn.btn_wp(type="submit" name="mail-request") ОСТАВИТЬ ЗАЯВКУ
          .Header__contacts.contacts
            .contacts__group
              a.contacts__item(href="tel:+375333332447") +375 (33) 333 24 47
              a.contacts__item(href="tel:+375336756847") +375 (33) 675 68 47
            .contacts__group
              a.contacts__item(href="mailto:webz.sites.by@gmail.com") webz.sites.by@gmail.com
    -
     var bonuses = [
        {title: 'Исследование вашего рынка и конкурентов', img_src: 'public/img/laptop.png', text: 'При создании сайта мы учитываем все факторы вашего рынка: сезонность, главные потребности клиента, наиболее популярные ключевые слова при поиске, чтобы сайт изначально был готов к дальнейшему продвижению'},
        {title: 'Уникальный, адаптивный дизайн', img_src: 'public/img/editor.png', text: 'Это то что выделит вас и сделает клиента более дружелюбным к вам. Дизайн – это не просто красивая картинка, а это то что помогает расположить к вам клиента.'},
        {title: 'Поддержка', img_src: 'public/img/responsive.png', text: 'Любое внесение поправок на сайт, которые не затрагивают оговоренный функционал, обойдутся вам совершенно бесплатно, если что-то вдруг окажется не красивым или перестанет работать - мы обязуемся исправить в кротчайшие сроки.'}]
    section.section.bonuses
      h2.title.Fblack.align-center.container Что вы получаете заказывая<br /> создание сайта у нас
      ul.bonuses__list
        each bonus in bonuses
          li.infoCard
            img.infoCard__img(src=bonus.img_src alt=bonus.title)
            .infoCard__title= bonus.title
            .infoCard__text.text= bonus.text

    -
