     var users = [
        {name: 'Роман', img_src: 'data/users/Roma.jpg', status: 'Руководитель компании «Flightcase»', testimonial: 'Огромное спасибо за разработку сайта! Все стильно и практично. Всем советую. Не прогадаете!'}]
    section.section.testimonials.coverable#testimonials
      .container
        h2.title.Fblack.align-left Отзывы наших клиентов
        .owl-carousel.owl-theme
          each user in users
            .testimonial
              .testimonial__user.user
                .user__img.coverable(style="background-image: url('" + user.img_src + "')")
                .user__name= user.name
                .user__status.text= user.status
              .testimonial__text.text= user.testimonial

    section.section
      .container
        h2.title.Fblack.align-left Наши контакты
        .communication
          .communication__part
            .communication__info
              .communication__img.communication__img_email.sprite
              .communication__content
                h3.communication__title Наш E-mail
                a.communication__text.text(href="mailto:webz.sites@gmail.com") webz.sites.by@gmail.com
            .communication__info
              .communication__img.communication__img_phone.sprite
              .communication__content
                h3.communication__title Звонить сюда
                a.communication__text.text(href="tel:+375333332447") +375 (33) 333 24 47
                a.communication__text.text(href="tel:+375336756847") +375 (33) 675 68 47
          .communication__part.communication__form
            form.form.form_black.form_cmp
              div.form__fields.clearfix
                input.form__field(type="text" name="name" placeholder="Ваше имя" required)
                input.form__field(type="text" name="email" placeholder="Ваш E-mail" required)
              label.form__label Сообщение
              textarea.form__tfield(name="message" required)
              button.form__btn.btn.btn_black.btn_wp(type="submit" name="mail-request") ОСТАВИТЬ ЗАЯВКУ

    #formPopup.modalBg
      .modalContent
        .modalContent__close
        form.form.form_white.form_cmp
          input(type="hidden" value="")
          div.form__fields.clearfix
            input.form__field(type="text" name="name" placeholder="Ваше имя" required)
            input.form__field(type="text" name="email" placeholder="Ваш E-mail" required)
          label.form__label Сообщение
          textarea.form__tfield(name="message" required)
          button.form__btn.btn.btn_white.btn_wp(type="submit" name="mail-request") ОСТАВИТЬ ЗАЯВКУ

    #thanks.modalBg
      .modalContent
        .modalContent__close
        .title.Fwhite.separator.separator_default.separator_white Спасибо за заявку!
        .text.Fwhite Мы свяжемся с вами в ближайшее время.

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="libs/mask.min.js")
    script(src="libs/owl-carousel/owl.carousel.min.js")
    script(src="libs/fontfaceobserver.js")
    script(src="public/js/app.js")
